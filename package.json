{
  "name": "video-script-monitor",
  "version": "1.0.7",
  "description": "AI视频生成项目的可视化监控系统",
  "type": "module",
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=16.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev:backend": "nodemon",
    "dev:frontend": "vite",
    "build": "vite build",
    "build:frontend": "vite build",
    "preview": "vite preview",
    "dev": "concurrently \"pnpm run dev:backend\" \"pnpm run dev:frontend\"",
    "start": "node --import tsx/esm src/backend/server.ts",
    "start:prod": "cross-env NODE_ENV=production node --import tsx/esm src/backend/server.ts",
    "postinstall": "pnpm run setup",
    "setup": "echo '项目设置完成，可以使用 pnpm run dev 启动开发服务器'",
    "clean": "pnpm store prune",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "chokidar": "^3.5.3",
    "cors": "^2.8.5",
    "d3": "^7.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "tsx": "^4.20.6",
    "ws": "^8.14.2",
    "zustand": "^4.4.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/d3": "^7.4.3",
    "@types/express": "^4.17.17",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/ws": "^8.5.8",
    "@vitejs/plugin-react": "^4.0.3",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2",
    "vite": "^4.4.5"
  }
}